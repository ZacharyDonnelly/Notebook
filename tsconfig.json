{
  "exclude": ["node_modules", "cypress", "**/cypress.config.ts", "**/public"],
  "include": [
    "./next-env.d.ts",
    "./types/next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./tests",
    "./types",
    "jest.config.ts",
    ".next/types/**/*.ts",
    "./.eslintrc.js",
    "**/types/**/*.d.ts",
    "**/types/**/*.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "typeRoots": ["./types/**/*.ts", "./types/**/*.d.ts", "**/next-auth.d.ts"],
    "paths": {
      "@/*": ["./src/app/*"],
      "@/types/*": ["./types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
