{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": [
      "types/mdx.d.ts",
      "types/next-auth.d.ts",
      "types/environment.d.ts",
      "types/**/*.ts"
    ],
    "paths": {
      "@/*": ["src/app/*"],
      "@/types/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    "types/environment.d.ts",
    "types/mdx.d.ts",
    "types/next-auth.d.ts",
    "types/user.ts",
    "tests",
    "jest.config.ts",
    ".eslintrc.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "cypress", "public"]
}
