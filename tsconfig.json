{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": ["types/**/*.ts", "types/**/*.d.ts", "types/next-auth.d.ts"],
    "paths": {
      "@/*": ["src/app/*"],
      "@/types/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    ".next/types/**/*.ts",
    "tests",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*",
    "types/next-auth.d.ts",
    "jest.config.ts",
    "./.eslintrc.js"
  ],
  "exclude": ["node_modules", "cypress", "public"]
}
