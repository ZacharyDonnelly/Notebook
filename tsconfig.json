{
  "exclude": [
    "node_modules",
    "cypress",
    "cypress/cypress.config.ts",
    "**/public"
  ],
  "include": [
    "next-env.d.ts",
    "types/**/*",
    "types/next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tests",
    "jest.config.ts",
    ".next/types/**/*.ts",
    "./.eslintrc.js",
    "next.config.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "typeRoots": ["types/**/*.ts", "types/**/*.d.ts", "types/next-auth.d.ts"],
    "paths": {
      "@/*": ["src/app/*"],
      "@/types/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
