{
  "name": "notebook",
  "version": "1.0.0",
  "description": "Notebook by Zach Donnelly<mail@zachdonnelly.com>",
  "author": "Zach Donnelly<mail@zachdonnelly.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZacharyDonnelly/Notebook"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "clean": "rm -rf public && rm -rf .cache",
    "lint:ts": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:ts:fix": "eslint --ext .ts,.tsx,.js,.jsx --fix .",
    "lint:deadcode": "ts-prune -i '(tests)'",
    "lint:styles": "stylelint src/app/styles/*.{scss,css}",
    "lint:md": "markdownlint-cli2 **/*.{md,mdx}",
    "lint:format": "prettier --check 'src/app/*.{js,jsx,ts,tsx,css}'",
    "lint:all": "yarn lint:ts && yarn lint:styles && yarn lint:format",
    "format:js": "prettier 'src/app/*.{js,jsx,ts,tsx}' --write",
    "format:styles": "prettier 'src/app/styles/*.css' --write",
    "format:all": "yarn format:js && yarn format:styles",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "cy:open:dev": "CYPRESS_STAGE=dev CYPRESS_BASE_URL=http://localhost:8000 cypress open",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e:dev": "CYPRESS_SUPPORT=y CYPRESS_BASE_URL=http://localhost:8000 CYPRESS_STAGE=dev start-server-and-test develop http://localhost:8000 cy:open",
    "test:e2e": "CYPRESS_SUPPORT=y yarn build && start-server-and-test serve http://localhost:9000 cy:open",
    "test:e2e:ci": "CYPRESS_SUPPORT=y yarn build && start-server-and-test serve http://localhost:9000 cy:run",
    "prepare": "node .husky/install.mjs"
  },
  "dependencies": {
    "next": "latest",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.70.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.53",
    "@types/react-dom": "^18.2.18",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "babel-jest": "^29.7.0",
    "classnames": "^2.5.1",
    "cypress": "^13.6.4",
    "cypress-axe": "^1.5.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "latest",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "latest",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markdownlint-cli2": "^0.12.1",
    "prettier": "^3.2.4",
    "stylelint": "^16.2.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-prettier": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "caniuse-lite": "1.0.30001582"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=18"
  },
  "browserslist": "> 0.25%, not dead",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:all && yarn typecheck"
    }
  }
}
